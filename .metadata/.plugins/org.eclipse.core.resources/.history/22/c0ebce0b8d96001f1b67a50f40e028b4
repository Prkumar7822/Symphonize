package Details;
import java.util.HashMap;
import java.util.Map;
import java.util.Scanner;
public class Assesment {
	
	public static void main(String[] args) {
		Scanner in=new Scanner(System.in);
		Map<Integer, String> obj=new HashMap<>();
		int id=1;
		
		
		while(true) {
			while(true) {
				
				System.out.println("1.Add Student");
				
				System.out.println("2.Update student");
				
				System.out.println("3.Deleting student");
				
				System.out.println("4.Searching for student");
				
				System.out.println("5.Displaying all students");
				int option=in.nextInt();
				
				switch(option) {
				case 1:{
					
					
					System.out.println("Enter Student name");
					
					String name=in.nextLine();
					
					int age=in.nextInt();
					
					String grade=in.next();
					
					obj.put(id, name);
					id+=1;
					
					System.out.println(name+""+"is saved succesdully");
					break;
					
				}
				case 2:{
					
					System.out.println("Enter id");
					
					if(obj.containsKey(id)) {
						System.out.println("enter new name");
						String newname=in.nextLine();
						int newage=in.nextInt();
						String newgrade=in.next();
					
					obj.put(id,newname);
					System.out.println(newname+"is saved succesfully");
					}
					else {
						System.out.println("Id is not present in the data");
					}
					break;
					
				}
				case 3:{
					System.out.println("Enter id");
					int id1=in.nextInt();
					if(obj.containsKey(id1)) {
					obj.remove(id);
					System.out.println(id+"is deleted succesfully");
				}
				else {
					System.out.println("Invalid id");
				}
					break;
				
		}
				case 4:{
					
					System.out.println("Enter id");
					int id2=in.nextInt();
					if(obj.containsKey(id2)) {
						obj.get(id2);
					}
					else {
						System.out.println("No data");
					}
					break;
					
				}
				case 5:{
					System.out.println("all data");
					for (Map.Entry<Integer, String> entry : obj.entrySet()) {
                        System.out.println("ID: " + entry.getKey() + ", Name: " + entry.getValue());
                    }
					break;
				}
				case 6:{
					System.exit(0);
				}
	}
	
	

		}}}}
